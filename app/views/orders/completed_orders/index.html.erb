<% provide(:title, "Your Purchases") %>
<section>
    <h1><%= yield(:title) %></h1>
</section>
<div class="row">
    <div class="col-md-8">
        <% if !@orders.nil? %>
            <% @orders.each do |order| %>
                <%= render 'orders/completed_order_summary', order: order %>
                <h3><%= link_to "View Details", member_orders_completed_path(@member, order) %></h3>
            <% end %>
            <div class="well center" style="background-color: #000000; border-color: #000000;">
                <%= will_paginate @order_items %>
            </div>
        <% end %>
    </div>
    <div class="col-md-4"> 
        <%= render 'layouts/sidebar', member: current_member %>
    </div>
</div>
