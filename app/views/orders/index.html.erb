<% provide(:title, "Your Purchased Orders") %>
<section>
    <h1><%= yield(:title) %></h1>
</section>
<div class="row">
    <div class="col-md-8">
        <div class="well">
            <% if !@orders.nil? %>
                <% @orders.each do |order| %>
                    <%= render '/orders/order', member: @member, order: order %>
                <% end %>
                    <div class="center" style="background-color: #FFFFFF; margin-top: 1.5em;">
                        <%= will_paginate @orders %>
                    </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-4"> 
        <%= render 'layouts/sidebar', member: current_member %>
    </div>
</div>
