<%= form_for(@instructor) do |f| %> 

<%-#Make this a multi-part form to handle file attachments%>
    <%= render 'shared/error_messages', object: f.object, html: { multipart: true } %> 
                        
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name, class: "form-control" %> 
        
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name, class: "form-control" %> 
                    
    <%= f.label :role, "Role" %>
    <%= f.text_field :role, class: "form-control" %> 
    
    <%= f.label :instructor_avatar, "Instructor Avatar" %> 
    <%= f.file_field :instructor_avatar, class: "form-control" %> 
    
    <% if @instructor.instructor_avatar? %>
        <%= f.label :remove_instructor_avatar, "Remove Instructor Avatar" %> 
        <%= f.check_box :remove_instructor_avatar %> 
    <% end %>
                        
    <%= f.submit yield(:button_text), class: "btn btn-primary" %> 
                        
<% end %>