<%= form_for(@programme) do |f| %> 

<%-#Make this a multi-part form to handle file attachments%>
    <%= render 'shared/error_messages', object: f.object, html: { multipart: true } %> 
                        
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %> 
    
    <%= f.label :programme_avatar, "Programme Avatar" %> 
    <%= f.file_field :programme_avatar, class: "form-control" %> 
    
    <% if @programme.programme_avatar? %>
        <%= f.label :remove_programme_avatar, "Remove Programme Avatar" %> 
        <%= f.check_box :remove_programme_avatar %> 
    <% end %>
                        
    <%= f.submit yield(:button_text), class: "btn btn-primary" %> 
                        
<% end %>