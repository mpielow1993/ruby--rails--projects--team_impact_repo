<%= form_for(@member) do |f| %> 
    <%= render 'shared/error_messages', object: f.object %> 
                        
    <%= f.label :user_name, "Username (must contain at least 1 upper-case letter, 1 lower-case letter & 1 digit)" %>
    <%= f.text_field :user_name, class: "form-control" %> 
                        
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name, class: "form-control" %> 
        
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name, class: "form-control" %> 
                    
    <%= f.label :email, "E-mail" %> 
    <%= f.email_field :email, class: "form-control" %> 
                
    <%= f.label :phone_no, "Phone Number" %>
    <%= f.telephone_field :phone_no, class: "form-control" %> 
                
    <%= f.label :password, "Password (must contain at least 1 upper-case letter, 1 lower-case letter & 1 digit)" %> 
    <%= f.password_field :password, class: "form-control" %> 
                
    <%= f.label :password_confirmation, "Password Confirmation" %> 
    <%= f.password_field :password_confirmation, class: "form-control" %> 
                        
    <%= f.submit yield(:button_text), class: "btn btn-primary" %> 
                        
<% end %>