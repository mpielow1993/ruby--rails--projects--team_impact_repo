<section>
	<h1><%= @instructor.first_name + " " + @instructor.last_name %></h1>
	<h2 class="admin instructors show"><%= @instructor.role %></h2>
</section>
<section class="center">
	<%= instructor_big_image_for(@instructor) %>
</section>
	<div class="container">
	    <div class="row">
	       <section>
	       		<% if File.exist?(@instructor_description_url) %>
	       			<%= render "instructors/#{@instructor.first_name.downcase}_#{@instructor.last_name.downcase}" %>
	       		<% else %>
	       			<%= render 'layouts/default_description', object: @instructor.first_name + " " + @instructor.last_name %>
	       		<% end %>
	       </section>
	   </div>
	</div>
