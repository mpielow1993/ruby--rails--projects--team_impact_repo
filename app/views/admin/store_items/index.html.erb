<% provide(:title, "Store Products") %>
<section>
    <h1><%= yield(:title) %></h1>
</section>
    <div class="row"> 
        <div class="col-md-8"> 
            <div class="well">
                <h2 style="color: #000000;">(<%= @store_items.count %> Store Products)</h2>
                <% if !@store_items.nil? %>
                    <% @store_items.each do |store_item| %>
                        <%= render 'admin/store_items/store_item', store_item: store_item %>
                    <% end %>
                    <div class="center" style="background-color: #FFFFFF; margin-top: 1.5em;">
                        <%= will_paginate @store_items %>
                    </div>                
                <% end %>
            </div>
        </div>
        <div class="col-md-4">
            <%= render 'layouts/sidebar', member: current_member %>
        </div>
    </div>
