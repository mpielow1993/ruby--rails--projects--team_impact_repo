<div class="card admin _store_item">
	<div class="card-body">
		<div class="row">
    		<div class="col-md-4">
        		<%= link_to store_item_big_image_for(store_item), store_item_path(store_item) %>
    		</div>
			<div class="col-md-8">
				<h3>Name: <span class="admin _store_item"><%= store_item.name %></span></h3>
				<h3>Type: <span class="admin _store_item"><%= store_item.type %></span></h3>
				<h3>Description:</h3> <span class="admin _store_item description"><%= store_item.description %></span>
        		<h3>Created: <span class="admin _store_item"><%= store_item.created_at.strftime("%a %b #{store_item.created_at.day.ordinalize}") %> <%= store_item.created_at.year %> at <%= store_item.created_at.strftime("%H:%M:%S") %></span></h3>
        		<h3>Last Updated: <span class="admin _store_item"><%= store_item.updated_at.strftime("%a %b #{store_item.updated_at.day.ordinalize}") %> <%= store_item.updated_at.year %> at <%= store_item.updated_at.strftime("%H:%M:%S") %></span></h3></span></h3>
				<div class="admin _store_item button-options">
        			<%= link_to "Delete", admin_store_item_path(store_item), method: :delete, class: "btn btn-danger admin _store_item", data: { confirm: "Are you sure you want to delete member '#{store_item.name}'?" } %>
					<%= link_to "Edit", edit_admin_store_item_path(store_item), class: "btn btn-primary admin _store_item" %>
				</div>
			</div>
		</div>
	</div>
</div>
