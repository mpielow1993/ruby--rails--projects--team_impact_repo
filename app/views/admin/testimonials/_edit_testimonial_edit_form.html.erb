<% provide(:button_text, "Save Changes") %>

<%= form_for @testimonial, url: admin_testimonial_path(@testimonial), method: :patch do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
                        
    <%= f.label :first_name, "First Name (*)" %>
    <%= f.text_field :first_name, class: "form-control" %> 
                        
    <%= f.label :last_name, "Last Name (*)" %>
    <%= f.text_field :last_name, class: "form-control" %> 
        
    <%= f.label :email, "E-mail (*)" %> 
    <%= f.email_field :email, class: "form-control" %> 
    
    <%= f.label :city, "City (*)" %>
    <%= f.text_field :city, class: "form-control" %> 
                        
    <%= f.label :country, "Country (*)" %>
    <%= f.text_field :country, class: "form-control" %> 
                
    <%= f.label :content, "Message (must be under 1000 characters)" %> 
    <%= f.text_area :content, class: "form-control" %> 
                
    <%= f.submit yield(:button_text), class: "btn btn-primary", style: 
    "width: 30%; margin-left: auto; margin-right: auto; display: block; margin-top: 3em; margin-bottom: 2em; padding: 1.5em;" %> 
                        
<% end %>