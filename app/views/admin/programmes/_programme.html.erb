<div class="card admin _programme">
    <div class="card-body">
		<div class="row">
    	<div class="col-md-4">
        	<%= link_to programme_big_image_for(programme), programme_path(programme) %>
    	</div>
		<div class="col-md-8">
			<h3>Name: <span class="admin _programme"><%= programme.name %></span></h3>
        	<h3>Created: <span class="admin _programme"><%= programme.created_at.strftime("%a %b #{programme.created_at.day.ordinalize}") %> <%= programme.created_at.year %> at <%= programme.created_at.strftime("%H:%M:%S") %></span></h3>
        	<h3>Last Updated: <span class="admin _programme"><%= programme.updated_at.strftime("%a %b #{programme.updated_at.day.ordinalize}") %> <%= programme.updated_at.year %> at <%= programme.updated_at.strftime("%H:%M:%S") %></span></h3></span></h3>
			<div class="admin _programme button-options">
        		<%= link_to "Delete", admin_programme_path(programme), method: :delete, class: "btn btn-danger admin _programme", data: { confirm: "Are you sure you want to delete member '#{programme.name}'?" } %>
				<%= link_to "Edit", edit_admin_programme_path(programme), class: "btn btn-primary admin _programme" %>
			</div>
		</div>
		</div>
    </div>
</div>
