<%= render 'shared/bootstrap_alert_messages', alert_message_hash: flash %>
<%= render 'shared/page_heading_section', page_heading: "Lessons", page_heading_quotation_id: nil %>
<div class="row">
    <div class="col-md-8 admin lessons index">
        <div class="well">
            <% if @lessons != [] %>
                <% @lessons.each do |lesson| %>
                    <%= render 'admin/lessons/lesson', lesson: lesson %>
                <% end %>
                <%= will_paginate @lessons %>
            <% end %>
        </div>
    </div>
    <div class="col-md-4">
        <%= render 'layouts/sidebar', member: current_member %>
    </div>
</div>
