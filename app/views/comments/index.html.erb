<%= render 'shared/bootstrap_alert_messages', alert_message_hash: flash %>
<%= render 'shared/page_heading_section', page_heading: "#{@member.first_name + @member.last_name}", page_heading_quotation_id: nil %>
<div class="row">
  <div class="col-md-8">
    <div class="well">
      <h3>&larr; <%= link_to "Back to Newswire", newswire_path %></h3>
      <section class="newswire_posts">
        <%= render @newswire_post %>
      </section>
      <h3>Comments (<%= @comments.count %>)</h3>
      <% if @comments.any? %>
        <ol class="newswire_posts">
          <%= render @comments, comment: @comment  %>
        </ol>
        <%= will_paginate @comments %>
      <% else %>
        <h3>No comments</h3>
      <% end %>
      <section>
        <%= render 'shared/comment_form' %>
      </section>
    </div>
  </div>
  <aside class="col-md-4">
    <%= render 'layouts/sidebar' %>
  </aside>
</div>
