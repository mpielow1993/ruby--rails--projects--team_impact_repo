<% provide(:button_text, "Submit Enquiry") %>

<%= form_for @enquiry, url: enquiries_path do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <h3><%= f.label :first_name, "First Name (*)" %></h3>
    <%= f.text_field :first_name, class: "form-control" %>

    <h3><%= f.label :last_name, "Last Name (*)" %></h3>
    <%= f.text_field :last_name, class: "form-control" %>

    <h3><%= f.label :email, "E-mail (*)" %></h3>
    <%= f.email_field :email, class: "form-control" %>

    <h3><%= f.label :phone_no, "Phone Number" %></h3>
    <%= f.telephone_field :phone_no, class: "form-control" %>

    <h3><%= f.label :message, "Message (must be under 300 characters)" %></h3>
    <%= f.text_area :message, class: "form-control" %>

    <%= f.submit yield(:button_text), class: "btn btn-primary enquiries _enquiry_form" %> 

<% end %>
