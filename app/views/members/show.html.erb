<% provide(:title, "Welcome to your Account") %>
<div class="row">
    <div class="col-lg-8">
        <h1><%= yield(:title) %></h1>
        <div class="row">
            <div class="well">
            </div>
        </div>
    </div>
    <aside class="col-lg-4">
        <div class="row"> 
            <section class="user_info">
                <h1>
                    <%= avatar_for(@member) %>
                    <%= @member.first_name + " " + @member.last_name %>
                </h1>  
            </section>
            <%= render 'layouts/sidebar', member: @member %>
        </div>
    </aside> 
</div>