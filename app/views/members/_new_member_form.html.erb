<%= form_for member, url: members_path, method: :post do |f| %> 

<%-#Make this a multi-part form to handle file attachments%>
    <%= render 'shared/error_messages', object: f.object, html: { multipart: true } %> 
                        
    <h3><%= f.label :user_name, "Username" %></h3>
    <%= f.text_field :user_name, class: "form-control" %> 
                        
    <h3><%= f.label :first_name, "First Name" %></h3>
    <%= f.text_field :first_name, class: "form-control" %> 
        
    <h3><%= f.label :last_name, "Last Name" %></h3>
    <%= f.text_field :last_name, class: "form-control" %> 
                    
    <h3><%= f.label :email, "E-mail" %></h3> 
    <%= f.email_field :email, class: "form-control" %> 
                
    <h3><%= f.label :phone_no, "Phone Number" %></h3>
    <%= f.telephone_field :phone_no, class: "form-control" %> 
                
    <h3><%= f.label :password, "Password" %></h3> 
    <%= f.password_field :password, class: "form-control" %> 
                
    <h3><%= f.label :password_confirmation, "Password Confirmation" %></h3> 
    <%= f.password_field :password_confirmation, class: "form-control" %> 
    
    <h3><%= f.label :avatar, "Profile Image" %></h3> 
    <%= f.file_field :avatar, class: "form-control" %> 
    
    <% if @member.avatar? %>
        <h3><%= f.label :avatar, "Profile Image" %></h3> 
        <%= f.check_box :remove_avatar %> 
    <% end %>
    
    <%= f.submit yield(:button_text), class: "btn btn-primary", style: "margin-top: 2em;" %> 
                        
<% end %>