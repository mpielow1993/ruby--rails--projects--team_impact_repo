<% if @member.errors.any? %> 
    <div id="error_explanation"> 
        <div class="alert alert-danger"> 
            The form contains <%= pluralize(@member.errors.count, "error") %>. 
        </div>
        <ul> 
            <% @member.errors.full_messages.each do |message| %> 
                <li><%= message %></li> 
            <% end %> 
        </ul> 
    </div> 
<% end %>