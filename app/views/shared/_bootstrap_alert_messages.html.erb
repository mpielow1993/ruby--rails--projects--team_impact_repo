<div class="row">
    <div class="col-md-12">
        <% if !alert_message_hash.nil? && !alert_message_hash.empty? %>
            <% alert_message_hash.each do |message_type, message| %>
                <%= content_tag(:div, message, class: "alert alert-#{message_type}", style: "font-family: Orbitron;") %>
            <% end %>
        <% end %>
    </div>
</div>