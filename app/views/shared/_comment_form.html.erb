<%= form_for @comment, url: newswire_post_comments_path(@newswire_post), method: :post do |f| %> 
    <%= render 'shared/error_messages', object: f.object %> 
    <div class="field">
        <%= f.hidden_field :member_id, value: current_member.id %> 
        <%= f.text_area :content, placeholder: "Add Comment..." %> 
    </div> 
    <span class="image"> 
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %> 
    </span>   
    <div class="center" style="background-color: #FFFFFF;">
        <%= f.submit "Post", class: "btn btn-primary", style: "width: 100%;" %> 
    </div>
<% end %>