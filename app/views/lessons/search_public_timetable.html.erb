<% provide(:title, 'Public Timetable') %> 
<h1><%= yield(:title) %></h1>

<div class="row">
    <h2><%= @date %></h2>
    <div class="col-lg-12">
        <div class="form-wrapper">
            <h2>Search Date</h2>
            <h3><%= link_to "Back to Search", public_timetable_path %></h3>
        </div>
        <div class="well">
            <%-#The members index with pagination-%>
            <table class="table-timetable">
                <thead>
                    <tr>
                        <td>Time</td>
                        <td>Date</td>
                    </tr>
                </thead>
                <tbody>
                    <% @registrations.each do |registration| %> 
                        <tr>
                            <td><%= registration.lesson.start_time.strftime("%H:%M") %> - <%= registration.lesson.end_time.strftime("%H:%M") %></td>
                            <td><%= render 'registrations/registration', registration: registration %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>               