<% provide(:title, 'Public Timetable') %> 
<h1><%= yield(:title) %></h1>

<div class="row">
    <h2><%= @date %></h2>
    <div class="col-lg-8">
        <div class="form-wrapper">
            <h2>Search Date</h2>
            <%= form_for :search, url: lessons_public_timetable_path, method: :post do |f| %>
                
                <%= f.text_field :lesson_date, as: :string, data: { behaviour: "flatpickr" }, class: "datepicker" %> 
                
                <%= f.label :subscription_id %>
                <%= f.collection_select :subscription_id, current_member.subscriptions.order(:subscription_name), :id, :subscription_name, { include_blank: false }, id: "current_member_subscription_id" %>
                
                <%= f.submit "Search", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="well">
            <%-#The members index with pagination-%>
            <table class="table-timetable">
                <thead>
                    <tr>
                        <td>Time</td>
                        <td>Date</td>
                    </tr>
                </thead>
                <tbody>
                    <% @lessons.each do |lesson| %> 
                        <tr>
                            <td><%= lesson.start_time.strftime("%H:%M") %> - <%= lesson.end_time.strftime("%H:%M") %></td>
                            <td><%= render 'lessons/lesson', member: @member, subscription: @subscription, registration: @registration, lesson: lesson %></td>
                        </tr>
                    <% end %>                     
                </tbody>
            </table>
            <%= will_paginate @lessons %>
        </div>
    </div>
</div>
