<section>
<div class="col-md-6">
    <div class="card" style="width: 18rem;">
        <%= store_item_avatar_for(store_item) %>
          <div class="card-body">
            <h5 class="card-title"><%= store_item.name.titleize %></h5>
            <p class="card-text" style="font-family: Trebuchet MS"><%= store_item.description %></p>
            <%  if !session[:order_id].nil? %>
              <%= form_for order_item, url: member_order_order_items_path(member, current_order, order_item), method: :post, remote: true do |f| %>
                <%= f.hidden_field :store_item_id, value: store_item.id %>
              
                <%= f.number_field :quantity, value: 1, min: 1 %>
              
                <%= f.submit "Add To Cart", class: "btn btn-primary" %>
              <% end  %>
            <% end  %>
          </div>
          <h3>Price: <%= store_item.price %></h3>
		  <% if current_member.admin? %>
			  <%= link_to "Edit", edit_store_item_path(store_item), class: "btn btn-primary" %>
			  <%= link_to "Remove", store_item_path(store_item), method: :delete, data: { confirm: "Are you sure you want to remove instructor '#{store_item.name}'" }, class: "btn btn-danger" %>
		  <% end %>
    </div>
</div>
<section>